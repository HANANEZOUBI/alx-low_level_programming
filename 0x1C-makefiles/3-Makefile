CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
	NAME = school
	RM = rm -f

# make all i.e.and make all files executable
all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# delete any temporary files and executable
clean :
	$(RM) *~ $(NAME)

# delete object files
oclean :
	$(RM) $(OBJ)

# delete all (temp files, executables & object files)
fclean : clean oclean

# delete all and recompiles all source files
re : oclean all
